# TeleTask Bot Configuration
# Copy to .env and configure

#-------------------------------------------------------------------------------
# Telegram Bot
#-------------------------------------------------------------------------------
BOT_TOKEN=your_telegram_bot_token_from_botfather
BOT_NAME=my_task_bot

#-------------------------------------------------------------------------------
# Database
#-------------------------------------------------------------------------------
DATABASE_URL=postgresql://botpanel:password@localhost:5432/mybot_db

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

#-------------------------------------------------------------------------------
# Timezone
#-------------------------------------------------------------------------------
TZ=Asia/Ho_Chi_Minh

#-------------------------------------------------------------------------------
# Logging
#-------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=/home/botpanel/logs/mybot.log

#-------------------------------------------------------------------------------
# Admin
#-------------------------------------------------------------------------------
# Comma-separated Telegram user IDs for admin notifications
ADMIN_IDS=123456789

#-------------------------------------------------------------------------------
# Features (optional)
#-------------------------------------------------------------------------------
# Google Calendar integration (per-user)
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/oauth/callback
OAUTH_CALLBACK_PORT=8081

# Prometheus metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# Redis cache
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
