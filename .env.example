#-------------------------------------------------------------------------------
# TeleTask Bot - Environment Configuration
# Copy this file to .env and fill in your values
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# REQUIRED - Telegram Bot
#-------------------------------------------------------------------------------
# Get token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here
BOT_NAME=your_bot_name

#-------------------------------------------------------------------------------
# REQUIRED - Database
#-------------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/teletask_db
DB_POOL_MIN=2
DB_POOL_MAX=10

#-------------------------------------------------------------------------------
# Timezone (default: Asia/Ho_Chi_Minh)
#-------------------------------------------------------------------------------
TZ=Asia/Ho_Chi_Minh

#-------------------------------------------------------------------------------
# Logging
#-------------------------------------------------------------------------------
LOG_LEVEL=INFO
# Optional: specify log file path (leave empty for stdout only)
LOG_FILE=

#-------------------------------------------------------------------------------
# Admin Configuration
#-------------------------------------------------------------------------------
# Comma-separated Telegram user IDs for admin notifications
# Get your ID from @userinfobot on Telegram
ADMIN_IDS=

#-------------------------------------------------------------------------------
# Domain & Export (for report downloads)
#-------------------------------------------------------------------------------
# Public URL where the bot is accessible (for report download links)
EXPORT_BASE_URL=https://your-domain.com
# Export directory (default: ./exports in bot directory)
EXPORT_DIR=

#-------------------------------------------------------------------------------
# OPTIONAL - Google Calendar Integration
#-------------------------------------------------------------------------------
GOOGLE_CALENDAR_ENABLED=false
# Get credentials from Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-domain.com/oauth/callback
OAUTH_CALLBACK_PORT=8081

#-------------------------------------------------------------------------------
# OPTIONAL - Security (for OAuth token encryption)
#-------------------------------------------------------------------------------
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

#-------------------------------------------------------------------------------
# OPTIONAL - Monitoring
#-------------------------------------------------------------------------------
METRICS_ENABLED=false
HEALTH_PORT=8080
BOT_DOMAIN=https://your-domain.com

#-------------------------------------------------------------------------------
# OPTIONAL - Redis (for caching)
#-------------------------------------------------------------------------------
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
